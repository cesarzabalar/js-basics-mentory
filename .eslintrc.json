{
    "env": {
        "node": true,
        "jest": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        // "indent": [
        //     "error",
        //     "tab"
        // ],
        // "linebreak-style": [
        //     "error",
        //     "unix"
        // ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 2,
        "eqeqeq": 2,
        "no-trailing-spaces": [
            "error", { "skipBlankLines": false }
        ],
        "eol-last": [
            "error", "always"
        ]
    }
}
